# Instagram Scraper Configuration Example
# Copy this file to .env and update with your values

# Instagram Session Cookies (Required)
# Get these from your browser's developer tools - see 'igscraper auth login' for instructions
IGSCRAPER_SESSION_ID=your_sessionid_cookie_here
IGSCRAPER_CSRF_TOKEN=your_csrftoken_cookie_here

# Output Configuration
IGSCRAPER_OUTPUT_DIR=./downloads
IGSCRAPER_CREATE_USER_FOLDERS=true

# Rate Limiting
IGSCRAPER_REQUESTS_PER_MINUTE=60

# Download Configuration
IGSCRAPER_CONCURRENT_DOWNLOADS=3
IGSCRAPER_DOWNLOAD_TIMEOUT=30
IGSCRAPER_SKIP_VIDEOS=false

# Retry Configuration
IGSCRAPER_RETRY_ENABLED=true
IGSCRAPER_RETRY_MAX_ATTEMPTS=3
IGSCRAPER_RETRY_INITIAL_DELAY=1000
IGSCRAPER_RETRY_MAX_DELAY=30000
IGSCRAPER_RETRY_MULTIPLIER=2.0

# Logging
IGSCRAPER_LOG_LEVEL=info
IGSCRAPER_LOG_JSON=false
IGSCRAPER_LOG_NO_COLOR=false

# Notifications
IGSCRAPER_NOTIFICATIONS_ENABLED=true

# Security Note:
# NEVER commit your real session cookies to version control!
# Use the 'igscraper auth login' command to securely store credentials